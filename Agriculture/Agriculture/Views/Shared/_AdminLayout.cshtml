<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Agriculture</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">

            
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">

                    <li>@Html.ActionLink("Home", "Index", "Admin")</li>
                 
                   
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Orders<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("View Seed Orders", "Index","AdminSeedOrderView")</li>
                            <li>@Html.ActionLink("View Machine Orders", "Index", "AdminMachineOrderView")</li>
                            <li>@Html.ActionLink("View Fertilizer Orders", "Index", "AdminFertilizerOrderView")</li>
                            <li>@Html.ActionLink("View Pestiside Orders", "Index", "AdminPestisideOrderView")</li>
                        </ul>
                    </li>
                   
                   
                  
                 
                    

                </ul>
                <ul class="nav navbar-nav navbar-right">
                    
                    <li>@Html.ActionLink("UserPage", "Index", "Home", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
                </ul>
               
            </div>

        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
